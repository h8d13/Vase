#!/bin/bash
set -e  # Exit on error

echo "=== Updating system ==="
acman -Syu --noconfirm

echo "=== Installing KDE Plasma ==="
pacman -S --noconfirm --needed plasma plasma-wayland-session sddm networkmanager networkmanager-runit plasma-nm

echo "=== Installing audio support ==="
pacman -S --noconfirm --needed pipewire pipewire-alsa pipewire-pulse pipewire-jack wireplumber

#echo "=== Installing Bluetooth support ==="
#pacman -S --noconfirm bluez bluez-runit bluez-utils bluedevil
# ln -sf /etc/runit/sv/bluetoothd /run/runit/service/

echo "=== Installation complete! ==="

echo "=== Enabling services! ==="
ln -sf /etc/runit/sv/sddm /run/runit/service/
ln -sf /etc/runit/sv/networkmanager /run/runit/service/


