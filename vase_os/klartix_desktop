#!/bin/bash

#!/bin/bash

# Full KDE installation script for Artix Linux (runit)

set -e  # Exit on error

echo "=== Updating system ==="
acman -Syu --noconfirm

echo "=== Installing KDE Plasma ==="
pacman -S --noconfirm plasma plasma-wayland-session

echo "=== Installing SDDM display manager ==="
pacman -S --noconfirm sddm

echo "=== Installing NetworkManager ==="
pacman -S --noconfirm networkmanager networkmanager-runit plasma-nm
 ln -sf /etc/runit/sv/networkmanager /run/runit/service/

echo "=== Installing audio support ==="
pacman -S --noconfirm pipewire pipewire-alsa pipewire-pulse pipewire-jack wireplumber

#echo "=== Installing Bluetooth support ==="
#pacman -S --noconfirm bluez bluez-runit bluez-utils bluedevil
# ln -sf /etc/runit/sv/bluetoothd /run/runit/service/

echo "=== Installation complete! ==="

echo "=== Enabling services! ==="
ln -sf /etc/runit/sv/sddm /run/runit/service/


